uniform vec3 lightDir;

varying vec3 vNormal;
varying vec2 vUV;

void main (void)
{
	vec3 finalNormal = normalize(vNormal);
	float diffColor = clamp(-dot(finalNormal, normalize(lightDir) ), 0.0, 1.0);
	vec3 color = diffColor*vec3(1.0,1.0,0.84) + vec3(0.02, 0.02, 0.06);
	gl_FragColor = vec4(color, 1.0);
}