// Pixel
//varying vec3 vPos;

uniform vec2 	uResolution;
uniform float	uTime;

void main (void) {
	vec2 uv = gl_FragCoord.xy/uResolution.xy;
	vec3 color = vec3(uv,0.0);
	gl_FragColor = vec4(color, 0.0);
}