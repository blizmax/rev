//----------------------------------------------------------------------------------------------------------------------
// Basic shader
//----------------------------------------------------------------------------------------------------------------------
// Pixel shader
uniform		vec4 uColor;
uniform		vec3 uLightDir;
varying		vec3 vNormal;

vec3 ambient = vec3(0.2);

void main (void) {
	vec3 normal = normalize(vNormal);
	float dif = max(0.0, dot(uLightDir, normal));
	vec3 color = uColor.xyz;
	gl_FragColor = vec4(color*dif+ambient, 0.0);
}
