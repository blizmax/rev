//----------------------------------------------------------------------------------------------------------------------
// Basic shader
//----------------------------------------------------------------------------------------------------------------------
// Vertex shader
uniform 	mat4 uMvp;
attribute 	vec3 vertex;
attribute 	vec3 normal;
attribute	vec2 uv;
varying		vec2 vUV;

void main ( void )
{
	vUV = uv;
	gl_Position = uMvp*vec4(vertex, 1.0);
}