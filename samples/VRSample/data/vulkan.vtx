#version 450
#extension GL_ARB_separate_shader_objects : enable

// Inputs
layout(location = 0) in vec3 vertexPos;
layout(location = 1) in vec3 vertexClr;

layout(location = 0) uniform UniformBufferObject {
	vec2 offset;
} perInstanceData;

// Outputs
out gl_PerVertex {
    vec4 gl_Position;
};

layout(location = 0) out vec3 color;

void main() {
    gl_Position = vec4(vertexPos.xy + perInstanceData.offset, vertexPos.z, 1.0);
	color = vertexClr;
}