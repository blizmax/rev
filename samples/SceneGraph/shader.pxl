// Pixel shader
uniform		vec4 uColor;
uniform		vec3 uLightDir;
varying		vec3 vNormal;

void main (void) {
	vec3 normal = normalize(vNormal);
	vec3 color = vec3(0.5, 0.0, 0.0);
	gl_FragColor = vec4(color, 0.0);
}
