// Vertex shader
uniform 	mat4 uMvp;
attribute 	vec3 vertex;
attribute 	vec3 normal;
attribute	vec2 uv;
varying		vec3 vShadowPos;

vec3 lightPos = vec3(0.0, 0.0, 5.0);

void main ( void )
{

	gl_Position = uMvp*vec4(vertex, 1.0);
	vShadowPos = gl_Position.xyz;
}