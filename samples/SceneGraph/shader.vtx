//----------------------------------------------------------------------------------------------------------------------
// Basic shader
//----------------------------------------------------------------------------------------------------------------------
// Vertex shader
uniform 	mat4 uMvp;
attribute 	vec3 vertex;
attribute 	vec3 normal;
varying		vec3 vNormal;
varying		vec3 vPos;

void main ( void )
{
	vNormal = normal;
	gl_Position = uMvp*vec4(vertex, 1.0);
	vPos = gl_Position.xyz;
}