//----------------------------------------------------------------------------------------------------------------------
// Basic shader
//----------------------------------------------------------------------------------------------------------------------
// Vertex shader
uniform 	mat4 uMvp;
uniform		mat3 uWorld;
attribute 	vec3 vertex;
attribute 	vec3 normal;
attribute	vec2 uv;
varying		vec3 vNormal;

void main ( void )
{
	vNormal = uWorld*normal;
	gl_Position = uMvp*vec4(vertex, 1.0);
}