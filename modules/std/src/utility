// Standard library module's utility header

#ifndef _REV_STD_UTILITY_H_
#define _REV_STD_UTILITY_H_

#include <initializer_list>

namespace std
{
	// ----- Operators -----
	namespace rel_ops{
		template<class T_> bool operator !=	(const T_&, const T_&);
		template<class T_> bool operator >	(const T_&, const T_&);
		template<class T_> bool operator <=	(const T_&, const T_&);
		template<class T_> bool operator >=	(const T_&, const T_&);
	}	// namespace rel_ops

	//------------------------------------------------------------------------------------------------------------------
	// Inline implementations
	//------------------------------------------------------------------------------------------------------------------
	namespace rel_ops
	{
		//----------------------------------------------
		template<class T_>
		bool operator != (const T_& a, const T_& b)
		{
			return !(a == b);
		}

		//----------------------------------------------
		template<class T_>
		bool operator > (const T_& a, const T_& b)
		{
			return b < a;
		}

		//----------------------------------------------
		template<class T_>
		bool operator <= (const T_& a, const T_& b)
		{
			return !(b < a);
		}

		//----------------------------------------------
		template<class T_>
		bool operator >= (const T_& a, const T_& b)
		{
			return !(a < b);
		}
	}	// namespace rel_ops
}	// namespace std

#endif // _REV_STD_UTILITY_H_
